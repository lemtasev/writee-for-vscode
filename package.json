{
	"name": "wtee",
	"displayName": "wtee",
	"description": "",
	"keywords": [
		"vscode",
		"plugin",
		"demo"
	],
	"version": "0.0.1",
	"publisher": "yangqi",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
    "icon": "static/images/icon.jpg",
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "vscode-plugin-demo",
			"properties": {
				"vscodePluginDemo.你的名字": {
					"type": "string",
					"default": "guest",
					"description": "你的名字"
				},
				"vscodePluginDemo.showTip": {
					"type": "boolean",
					"default": true,
					"description": "是否在每次启动时显示欢迎提示！"
				}
			}
		},
		"commands": [
			{
				"command": "wtee.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "wtee.showHover",
				"title": "Show Hover"
			}
		],
		"keybindings": [
			{
				"command": "wtee.showHover",
				"key": "ctrl+l",
				"mac": "cmd+l",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "wtee.showHover",
					"group": "navigation@1"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceLangId == javascript",
					"command": "wtee.showHover",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "wtee.showHover",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "myplugin",
					"title": "测试插件",
					"icon": "static/images/icon.jpg"
				}
			]
		},
		"views": {
			"myplugin": [
				{
					"id": "myplugin1",
					"name": "他1"
				},
				{
					"id": "myplugin2",
					"name": "天"
				},
				{
					"id": "myplugin3",
					"name": "拖"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
