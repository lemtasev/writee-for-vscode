{
	"name": "writee",
	"displayName": "writee-for-vscode",
	"description": "One plugin for vscode to write story.",
	"keywords": [
		"vscode",
		"plugin",
		"write"
	],
	"version": "0.0.1",
	"publisher": "yangqi",
	"repository": "https://github.com/lemtasev/writee-for-vscode",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
    "icon": "static/images/icon.jpg",
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "writee",
			"properties": {
				"writee.showChineseCount": {
					"type": "boolean",
					"default": true,
					"description": "显示中文汉字字数"
				},
				"writee.showAllCount": {
					"type": "boolean",
					"default": true,
					"description": "显示全文字数，包含符号"
				}
			}
		},
		"commands": [
			{
				"command": "writee.showCounnt",
				"title": "统计字数"
			}
		],
		"keybindings": [
			{
				"command": "writee.showCounnt",
				"key": "ctrl+l",
				"mac": "cmd+l",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "writee.showCounnt",
					"group": "navigation@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
