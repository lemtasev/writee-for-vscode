{
	"name": "writee",
	"displayName": "Writee For Vscode",
	"description": "一个用vscode进行中文写作的插件。",
	"keywords": [
		"vscode",
		"plugin",
		"write"
	],
	"version": "0.0.1",
	"publisher": "yangqi",
	"repository": "https://github.com/lemtasev/writee-for-vscode",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
    "icon": "./images/icon.jpg",
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "writee",
			"properties": {
				"writee.showChineseCount": {
					"type": "boolean",
					"default": true,
					"description": "显示中文汉字字数"
				},
				"writee.showAllCount": {
					"type": "boolean",
					"default": true,
					"description": "显示全文字数，包含符号"
				},
				"writee.targetWordCount": {
					"type": "number",
                    "default": 3000,
                    "description": "目标章节字数"
				}
			}
		},
		"commands": [
			{
				"command": "writee.test",
				"title": "测试功能"
			},
			{
				"command": "writee.showCounnt",
				"title": "统计字数"
			},
			{
				"command": "writee.webview",
				"title": "通过webview打开"
			}
		],
		"keybindings": [
			{
				"command": "writee.test",
				"key": "ctrl+t",
				"mac": "cmd+t",
				"when": "editorTextFocus"
			},
			{
				"command": "writee.showCounnt",
				"key": "ctrl+l",
				"mac": "cmd+l",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "writee.showCounnt",
					"group": "navigation@1"
				}
			],
			"explorer/context": [
                {
					"when": "resourceLangId == plaintext || resourceLangId != ''",
                    "command": "writee.webview",
                    "group": "navigation@1"
                }
            ]
		},
		"snippets": [
            {
                "language": "plaintext",
                "path": "./snippets/plaintext.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
